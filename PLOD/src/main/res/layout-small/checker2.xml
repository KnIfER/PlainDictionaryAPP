<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30_"
    android:background="@drawable/surrtrip2"
	>
	<com.knziha.filepicker.widget.CircleCheckBox
	    android:id="@+id/check1"
	    android:layout_width="@dimen/_30_"
	    android:layout_height="match_parent"
		app:dim1="6dp"
		app:color_background="#FF3F51B5"
		app:color_border="#FFF"
		app:size="25dp"
		app:src0="@drawable/clippin"
	    />

	<ViewStub
		android:id="@+id/check2"
		android:layout_width="@dimen/_30_"
		android:layout_height="match_parent"
		android:layout="@layout/checker_item2"
		/>

	<ViewStub
		android:id="@+id/check3"
		android:layout_width="@dimen/_30_"
		android:layout_height="match_parent"
		android:layout="@layout/checker_item2"
		/>

	<View
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		/>

	<HorizontalScrollView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			>
			<include layout="@layout/checker_s" />
		</LinearLayout>
	</HorizontalScrollView>
</LinearLayout>