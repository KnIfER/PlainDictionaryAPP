<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:splitview="http://schemas.android.com/apk/res-auto"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="44dp"
	android:layout_gravity="end"
	android:paddingStart="20dp"
	android:orientation="vertical"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_gravity="end"
		android:paddingStart="8dp"
		>
		<com.knziha.plod.widgets.TextMenuView
			android:id="@string/copySelected"
			android:text="@string/copySelected"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:textColor="#000"
			android:layout_weight="1"
			android:background="?listChoiceBackgroundIndicator"
			android:paddingTop="4dp"
			android:paddingBottom="4dp"
			/>
		<com.knziha.plod.widgets.TextMenuView
			android:id="@string/copy"
			android:text="@string/copy"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:textColor="#000"
			android:layout_weight="1"
			android:background="?listChoiceBackgroundIndicator"
			android:paddingTop="4dp"
			android:paddingBottom="4dp"
			/>
	</LinearLayout>
</LinearLayout>