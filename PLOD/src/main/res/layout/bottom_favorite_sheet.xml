<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#fff"
	>
	<LinearLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="8dp"
		android:orientation="horizontal"
		>
		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="19sp"
			android:text="  添加到收藏夹"
			android:singleLine="true"
			android:textColor="@android:color/black"
			android:gravity="center"
			android:drawableLeft="@drawable/ic_folder_open_black_24dp"
			/>
		<View
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1"
			/>
		<TextView
			android:id="@+id/new_folder"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:textSize="16sp"
			android:text="  新建收藏夹"
			android:singleLine="true"
			android:textColor="#888"
			android:gravity="center"
			android:drawableLeft="@drawable/ic_add_black_24dp"
			android:drawableTint="#888"
			/>
	</LinearLayout>

	<ListView
		android:id="@+id/favorList"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:dividerHeight="1px"
		android:divider="#ccc"
		android:fastScrollEnabled="true"
		/>

	<LinearLayout
		android:id="@+id/bottombar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_50_"
		android:orientation="horizontal"
		android:background="@drawable/toolbardrawable"
		android:paddingStart="8dp"
		android:paddingEnd="8dp"
		>
		<Button
			android:id="@+id/cancel"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:layout_gravity="end"
			android:text="@string/cancel"
			android:paddingTop="0dp"
			android:paddingBottom="0dp"
			/>

		<Button
			android:id="@+id/confirm"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="4"
			android:layout_gravity="end"
			android:text="@string/confirm"
			android:layout_marginStart="5dp"
			android:paddingTop="0dp"
			android:paddingBottom="0dp"
			/>

	</LinearLayout>

</LinearLayout>



