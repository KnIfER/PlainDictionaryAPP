<LinearLayout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/etSchBar"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:visibility="invisible"
	tools:visibility="visible"
	android:elevation="6dp"
	android:layout_marginTop="@dimen/barSize"
	>
	<View
		android:layout_width="match_parent"
		android:layout_height="2px"
		android:background="#f0afafaf"
		android:visibility="gone"
		/>
	<LinearLayout
		android:id="@+id/etToolsBack"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_35_"
		android:background="#8f8f8f"
		>
		<TextView
			android:id="@+id/etBack"
			android:text="返回"
			android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
			style="@style/SearchbarMenuTextStyle"
			/>
		<TextView
			android:id="@+id/etCopy"
			android:text="复制"
			android:drawableLeft="@drawable/ic_baseline_copy_24"
			style="@style/SearchbarMenuTextStyle"
			/>
		<TextView
			android:id="@+id/etPaste"
			android:text="粘贴"
			android:drawableLeft="@drawable/ic_baseline_paste_24"
			style="@style/SearchbarMenuTextStyle"
			/>
		<TextView
			android:id="@+id/etClear"
			android:text="清空"
			android:drawableLeft="@drawable/ic_baseline_clear_24"
			style="@style/SearchbarMenuTextStyle"
			/>
		<TextView
			android:id="@+id/etEnter"
			android:text="相机"
			android:drawableLeft="@drawable/ic_baseline_camera_enhance_24"
			style="@style/SearchbarMenuTextStyle"
			android:longClickable="true"
			/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="2px"
		android:background="#f0afafaf"
		/>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<View
			android:id="@+id/show_search_history_dropdown_bg"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#3E8F8F8F"
			android:onClick="onClick"
			/>
		<ImageView
			android:id="@+id/schDropdown"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_28_"
			android:background="@drawable/frame_gradient_bgs"
			android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
			android:onClick="onClick"
			/>
	</FrameLayout>
</LinearLayout>