<layout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:clickable="true"
	tools:context="com.knziha.plod.plaindict.MainActivityUIBase"
	>

	<com.knziha.plod.widgets.AdvancedNestFrameView
		android:id="@+id/titleBar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dictitle"
		tools:background="@drawable/titlebar"
		android:paddingTop="0dp"
		>
		<com.knziha.plod.widgets.FtagImageView
			android:id="@+id/cover"
			android:layout_width="@dimen/dtcover"
			android:layout_height="@dimen/dtcover"
			android:layout_gravity="center_vertical"
			android:background="@drawable/title_cover"
			android:layout_marginStart="@dimen/dtcoverL"
			android:importantForAccessibility="no"
			/>
		<com.knziha.plod.widgets.FlowTextView
			android:id="@+id/toolbar_title"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:singleLine="true"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:paddingLeft="29dp"
			android:paddingRight="5dp"
			android:gravity="center_vertical"
			android:maxLines="2"
			android:importantForAccessibility="yes"
			app:margin="17dp"
			tools:text="词典标题"
			android:background="?attr/listChoiceBackgroundIndicator"
			/>
		<ImageView
			android:id="@+id/dopt"
			android:layout_width="35dp"
			android:layout_height="33dp"
			android:gravity="center"
			android:layout_gravity="center_vertical|right"
			android:src="@drawable/ic_overflow_hor_small"
			android:tint="@android:color/white"
			android:paddingLeft= "8dp"
			android:paddingRight="8dp"
			android:layout_marginEnd="2dp"
			android:background="?attr/actionBarItemBackground"
			/>
	</com.knziha.plod.widgets.AdvancedNestFrameView>

	<com.knziha.plod.widgets.AdvancedNestScrollWebView
		android:id="@+id/webviewmy"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fadingEdge="vertical"
		android:overScrollMode="never"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:scrollbars="vertical"
		/>
</LinearLayout>
</layout>