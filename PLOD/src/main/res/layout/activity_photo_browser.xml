<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>
	<View
		android:id="@+id/background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#33333333"
		android:alpha="0"
		/>

	<androidx.viewpager.widget.ViewPager
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<TextView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:paddingStart="25dp"
        android:paddingTop="30dp"
        android:textSize="15sp"
		android:text="1/12"
		android:shadowRadius="5"
		android:shadowColor="#000"
        android:textColor="@android:color/white" />


	<LinearLayout
		android:id="@+id/browser_widget12"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|right"
		android:orientation="horizontal"
		android:layout_marginBottom="50dp"
		android:paddingEnd="30dp"
		android:paddingStart="25dp"
		android:padding="10dp"
		>
		<android.widget.ImageView
			android:id="@+id/browser_widget13"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:background="@drawable/listviewselector2"
			android:src="@drawable/chevron_backward_framed"
			android:layout_marginRight="10dp"
			/>
		<android.widget.ImageView
			android:id="@+id/browser_widget14"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:background="@drawable/listviewselector2"
			android:src="@drawable/chevron_right_framed"
			/>
	</LinearLayout>

	<android.widget.ImageView
		android:id="@+id/float_back"
		android:layout_width="45dp"
		android:layout_height="45dp"
		android:background="@drawable/listviewselector3"
		android:src="@drawable/round_back_ic"
		android:layout_gravity="right|top"
		android:layout_marginRight="@dimen/_25_"
		android:layout_marginTop="@dimen/_30_"
		/>


	<android.widget.ImageView
		android:id="@+id/float_menu"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:background="@drawable/listviewselector3"
		android:src="@drawable/ic_menu_round"
		android:layout_gravity="right|center"
		android:layout_marginRight="@dimen/_25_"
		/>


	<android.widget.ImageView
		android:id="@+id/browser_widget15"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/listviewselector2"
		android:src="@drawable/ic_file_download_black_24dp"
		android:layout_gravity="bottom|start"
		android:layout_marginBottom="50dp"
		android:layout_marginStart="2px"
		android:paddingStart="25dp"
		android:padding="10dp"
		/>
</FrameLayout>
