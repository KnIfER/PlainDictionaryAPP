<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:UIStyles="http://schemas.android.com/apk/res-auto"
	android:id="@+id/popup"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/floatcontent"
	android:layout_marginTop="10dp"
	android:layout_marginBottom="10dp"
	android:layout_marginLeft="4dp"
	android:layout_marginRight="4dp"
	android:elevation="6dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		>
		<ImageView
			android:id="@+id/popIvBack"
			android:layout_width="50dp"
			android:padding="6dp"
			android:layout_height="match_parent"
			android:src="@drawable/abc_ic_ab_back_material_simple_compat"
			android:background="@drawable/abc_action_bar_item_background_material"
			/>
		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/popupText1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:paddingTop="5dp"
			tools:text="androidx.appcompat.widget.AppCompatTextViewandroidx.appcompat.widget.AppCompatTextView"
			android:textSize="25sp"
			android:paddingBottom="5dp"
			android:autoSizeMinTextSize="10dp"
			android:autoSizeTextType="uniform"
			android:autoSizeMaxTextSize="25sp"
			android:ellipsize="end"
			android:maxLines="1"
			android:minWidth="45dp"
			android:background="@drawable/listviewselector0"
			/>
		<ImageView
			android:id="@+id/tools"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/tools_toolbar"
			android:background="?attr/actionBarItemBackground"
			android:tint="#8f8f8f"
			android:padding="7dp"
			android:layout_marginEnd="1px"
			android:visibility="gone"
			/>
		<com.knziha.plod.widgets.ActivatableImageView
			android:id="@+id/popIvStar"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/star_ic_grey"
			android:background="?attr/actionBarItemBackground"
			app:src0="@drawable/star_ic_solid_framed"
			android:layout_marginEnd="1px"
			tools:visibility="gone"
			/>
		<ImageView
			android:id="@+id/peruse"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/ic_peruse_pan"
			android:background="?attr/actionBarItemBackground"
			android:tint="#8f8f8f"
			android:padding="5dp"
			android:layout_marginEnd="1px"
			android:visibility="gone"
			/>
		<ImageView
			android:id="@+id/gTrans"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/ic_g_translate_black_24dp"
			android:background="?attr/actionBarItemBackground"
			android:tint="#8f8f8f"
			android:layout_marginEnd="1px"
			/>
		<ImageView
			android:id="@+id/max"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/ic_fullscreen_black_24dp"
			android:background="?attr/actionBarItemBackground"
			android:tint="#8f8f8f"
			android:layout_marginEnd="1px"
			/>
		<android.widget.ImageView
			android:id="@+id/popLstDict"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/chevron_top22"
			android:background="?attr/actionBarItemBackground"
			android:layout_marginEnd="1px"
			android:visibility="gone"

			/>
		<android.widget.ImageView
			android:id="@+id/popNxtDict"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/chevron_bottom22"
			android:background="?attr/actionBarItemBackground"
			/>
	</LinearLayout>

	<com.knziha.plod.widgets.LinearSplitView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="45dp"
		android:layout_marginBottom="30dp"
		>
		<com.knziha.plod.widgets.RLContainerSlider
			android:id="@+id/PageSlider"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:descendantFocusability="beforeDescendants"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:focusable="true"
			android:focusableInTouchMode="true"
			>
			<com.knziha.plod.widgets.PageSlide
				android:id="@+id/cover"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:textSize="20sp"
				tools:text="ABC"
				tools:visibility="visible"
				android:paddingBottom="50dp"
				/>
			<com.knziha.plod.widgets.AdvancedNestScrollWebView
				android:id="@+id/webviewmy"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:theme="@style/scroll"
				android:fadingEdge="none"
				android:overScrollMode="never"
				/>

			<com.knziha.plod.widgets.DragScrollBar
				android:id="@+id/dragScrollBar"
				android:layout_width="@dimen/scrollBarWidth"
				android:layout_height="match_parent"
				android:layout_marginTop="35dp"
				android:layout_marginBottom="5dp"
				android:layout_marginRight="9.5dp"
				android:layout_marginLeft="4dp"
				android:layout_gravity="right"
				/>
	<!--		<ImageView-->
	<!--			android:id="@+id/popupDragdot"-->
	<!--			android:layout_width="55dp"-->
	<!--			android:layout_height="49dp"-->
	<!--			android:orientation="horizontal"-->
	<!--			android:background="@drawable/floathandle"-->
	<!--			android:layout_gravity="right|bottom"-->
	<!--			android:layout_marginTop="3dp"-->
	<!--			android:layout_marginBottom="5dp"-->
	<!--			android:layout_marginRight="3dp"-->
	<!--			android:elevation="1dp"-->
	<!--			android:src="@drawable/move"-->
	<!--			android:alpha=".8"-->
	<!--			/>-->
		</com.knziha.plod.widgets.RLContainerSlider>
	</com.knziha.plod.widgets.LinearSplitView>

	<LinearLayout
			android:id="@+id/checkerr"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:layout_gravity="bottom"
			android:background="@drawable/floatcontent_bottom"
			>
			<com.knziha.filepicker.widget.CircleCheckBox
				android:id="@+id/popChecker"
				android:layout_width="30dp"
				android:layout_height="30dp"
				app:dim1="6dp"
				app:color_background="#FF3F51B5"
				app:color_border="#FFF"
				app:size="25dp"
				app:src0="@drawable/clippin"
				android:layout_marginStart="8dp"
				/>
			<com.knziha.plod.widgets.FlowTextView
				android:id="@+id/popupText2"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:padding="1dp"
				android:textColor="@color/OldHeaderBlue"
				android:ellipsize="end"
				android:maxLines="1"
				tools:text="嘿你个小可爱"
				/>


		<ImageView
			android:id="@+id/mode"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/ic_btn_multimode"
			android:background="?attr/actionBarItemBackground"
			/>

		<ImageView
			android:id="@+id/popLstE"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/chevron_bottom2"
			android:tint="#666"
			android:background="?attr/actionBarItemBackground"
			/>
		<ImageView
			android:id="@+id/popNxtE"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/chevron_top2"
			android:tint="#666"
			android:background="?attr/actionBarItemBackground"
			/>

		<ImageView
			android:id="@+id/popIvSettings"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:padding="4dp"
			android:src="@drawable/drawer_menu_icon_setting"
			android:layout_marginRight="5dp"
			android:background="?attr/actionBarItemBackground"
			/>

		<ImageView
			android:id="@+id/popIvRecess"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:padding="5dp"
			android:src="@drawable/recess"
			android:tint="#666"
			android:background="?attr/actionBarItemBackground"
			/>


		<ImageView
			android:id="@+id/popIvForward"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:padding="5dp"
			android:src="@drawable/forward"
			android:tint="#666"
			android:background="?attr/actionBarItemBackground"
			/>

		</LinearLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		/>
</FrameLayout>
